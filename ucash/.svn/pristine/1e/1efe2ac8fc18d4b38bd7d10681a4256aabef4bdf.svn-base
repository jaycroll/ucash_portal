@charset "UTF-8";


body{
	width: 960px;
	margin: 0 auto 0 auto;
	font-family: "Calibri";
	/*background: #73C2FF;*/
}
header,section#content,footer{
	width: 900px;
	padding: 0 15px 0 15px;
	margin: 0;
}

header{
	background: #515DA9;
	font-size: 1.1em;
	color: #fff;
	padding: 10px 15px 0 15px;
	height: 30px;
}

header span.lh{
	float: left;
}

header span.rh{
	float: right;
}

section#content{
	background: #fff;
	height: 550px;
}

section#content aside ul{
	width: 220px;
	height: 350px;
	background: #FFF;
	list-style: none;
	padding: 0;
	margin: 16px 0 16px 8px;
	float: left;
	border-bottom: 1px solid #AAA;
	border-left: 1px solid #AAA;
	border-right: 1px solid #EEE;
	border-top: 1px solid #AAA;
	/*border: 1px solid;*/
}

section#content aside ul li{
	width: 100%;
	height: 25px;
	text-indent: 10px;
	padding: 5px 0 5px 0;
}


section#content aside ul li span{
	padding: 0 7px 0 7px;
}

section#content aside ul li.online{
	background: url("../img/online.png") no-repeat  96% 50%;
	background-size: 10px 10px;
}

section#content aside ul li.offline{
	background: url("../img/offline.png") no-repeat  96% 50%;
	background-size: 10px 10px;
}

section#content aside ul li:nth-child(even){
	background-color: #FEF;
}

section#content div.message-container{
	text-indent: 10px;
	float: left;
}

section#content div.message-container div.message-list-wrapper{
	background: #fff;
	width: 650px;
	height: 350px;
	margin: 16px 0 16px 0;
	overflow-y: auto;
	border-bottom: 1px solid #AAA;
	border-right: 1px solid #AAA;
	border-top: 1px solid #AAA;
	padding: 0;
	/*border: 1px solid;*/
}

section#content div.message-container div.message-list-wrapper ul{
	list-style: none;
	padding: 0;
	margin: 0;
}

section#content div.message-container div.message-list-wrapper ul li{
	width: 100%;
	padding: 3px 0 3px 0;
}

section#content div.message-container div.message-list-wrapper ul li:nth-child(even){
	background: #FEF;
}


section#content div.message-container div.message-list-wrapper ul li.me{
	color: #511DA9;
}


section#content div.message-container div.message-list-wrapper ul li span{
	float:left;
	font-weight: bold;
	padding: 0 5px 0 5px;
}

section#content div.message-container div.message-list-wrapper ul li span.time{
	float:right;
	font-weight: normal;
	padding: 0 5px 0 5px;
}

section#content div.message-container div.message-list-wrapper ul li p{
	display: inline-block;
	margin: 16px 0 5px 0;
}

section#content div.message-container textarea{
	min-width: 550px;
	max-width: 550px;
	min-height: 100px;
	float: left;
	margin: 5px;
	resize: none;
	overflow-y: auto;

}

section#content div.message-container button{
	background: #515DA9;
	font-size: 1em;
	color: #fff;
	border: 0;
	width: 80px;
	height: 35px;
	float: right;
	margin: 5px;
}
section#content div.message-container button:hover{
	background: #511DA9;
}


form.form-signin{
	width: 100%;
	padding: 5px 15px 5px 0;
}